@model IEnumerable<QLCamDo.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<section class="content-header">
    <h1>
        Quản trị người dùng
        <small>Tất cả thông tin người dùng trong hệ thống</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Dashboard","User")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active">Quản trị người dùng</li>
    </ol>
</section>
<section class="content">
    <!-- COLOR PALETTE -->
    <div class="box box-default color-palette-box">
        <div class="box-header with-border">
            <div id="example1_filter" class="dataTables_filter">
                <div class="form-group pull-right">
                    <a href="@Url.Action("Create")" class="btn btn-danger pull-right">
                        <i class="fa fa-plus-circle"></i> Thêm mới
                    </a>
                </div>
            </div>

        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12" id="divMessage">
                    @Html.Raw(ViewBag.Message)
                </div>
            </div>
            <div class="main-box-body clearfix">
                <div class="table-responsive clearfix">
                    <table class="table table-hover table-bordered table-condensed">
                        <thead>
                            <tr>
                                @*<th style="text-align:center">
                                        @Html.DisplayNameFor(model => model.Avatar)
                                    </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Fullname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>                              
                                <th>
                                    @Html.DisplayNameFor(model => model.UserRole.RoleName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastVisit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Active)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td align="center">
                                                    <img width="80" class="img-responsive img-circle" src="@(string.IsNullOrEmpty(item.Avatar)?string.Empty: Url.Content(item.Avatar))" />
                                                </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fullname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Username)
                                            </td>                                          
                                            <td align="center">
                                                @Html.DisplayFor(modelItem => item.UserRole.RoleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastVisit)
                                            </td>
                                            <td>
                                                @(Html.Raw(QLCamDo.Utilities.HtmlUtility.BuildHtmlActive(item.Active)))
                                            </td>
                                            <td align="center">
                                                @*<a href="@Url.Action("Details", new { id = item.Id })" class="table-link">
                                                        <span class="fa-stack">
                                                            <i class="fa fa-square fa-stack-2x"></i>
                                                            <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                                        </span>
                                                    </a>*@
                                                <a href="@Url.Action("Edit", new { id = item.Id })" class="table-link">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                                <a class="btn-delete table-link danger" href="javascript:void(0)" data-id="@item.Id">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }

                        </tbody>
                    </table>
                </div>
                <div class="col-md-12 text-right">
                    @Html.Raw(ViewBag.Paging)
                </div>
            </div>
        </div>
    </div>
</section>
@Html.Hidden("hdUrlAjaxDelete", "/User/Delete")

