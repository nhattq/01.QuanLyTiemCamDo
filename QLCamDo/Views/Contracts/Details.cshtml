@model QLCamDo.Models.Contract

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}


<section class="content-header">
    <h1>
        Chi tiết hợp đồng
        <small>Chi tiết hợp đồng @Model.Code</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Dashboard","User")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active"> Chi tiết hợp đồng</li>
    </ol>
</section>
<section class="content">
    <!-- COLOR PALETTE -->
    <div class="box box-default color-palette-box">
        <div class="main-box clearfix">
            <div class="col-md-12">
                @Html.Raw(ViewBag.Message)
            </div>
            <div class="col-lg-12">
                <div class="box-header with-border">
                    <div class="box-title">
                        Thông tin hợp đồng
                    </div>
                </div>
                <div class="main-box-body clearfix">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table">
                                <tr>
                                    <td width="20%">Mã hợp đồng</td>
                                    <td><strong>@Model.Code</strong></td>
                                </tr>
                                <tr>
                                    <td width="20%">Tên khách hàng</td>
                                    <td><strong>@Model.Customer.Name</strong></td>
                                </tr>
                                <tr>
                                    <td width="20%">Địa chỉ</td>
                                    <td><strong>@Model.Customer.Address</strong></td>
                                </tr>
                                <tr>
                                    <td width="20%">Điện thoại</td>
                                    <td><strong>@Model.Customer.Phone</strong></td>
                                </tr>
                                <tr>
                                    <td width="20%">Chứng minh nhân dân</td>
                                    <td><strong>@Model.Customer.CMND</strong></td>
                                    <td width="20%">Ngày cấp</td>
                                    <td style="text-align:left"><strong>@Model.Customer.CMNDCreatedDate.ToString("dd/MM/yyyy")</strong></td>
                                    <td width="20%">Nơi cấp</td>
                                    <td style="text-align:left"><strong>@Model.Customer.CMNDCreatedAt</strong></td>
                                </tr>

                                <tr>
                                    <td>Mô tả hợp đồng</td>
                                    <td>@Model.Description </td>
                                </tr>
                                <tr>
                                    <td>Chi tiết mặt hàng cầm cố</td>
                                    <td>@Model.Commodity </td>
                                </tr>
                                <tr>
                                    <td>Trạng thái</td>
                                    <td>@Html.Raw(QLCamDo.Utilities.HtmlUtility.BuildHtmlContractStatus(Model.Status))</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <a href="@Url.Action("Index")" class="btn btn-default">Trở về</a>
                    <button type="submit" class="btn btn-info pull-right">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>
</section>








